<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:layout_width="110dp"
        android:layout_height="160dp"
        android:id="@+id/imageViewMoviesImage"
        android:src="@drawable/avatar"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Title"
        android:layout_gravity="center_horizontal"
        android:id="@+id/textViewMoviesTitle"
        android:textColor="#ff454545"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/imageViewMoviesImage"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_gravity="center_horizontal"
        android:text="Description"
        android:textSize="12dp"
        android:id="@+id/textViewMoviesDescription"
        android:textColor="#ff454545"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/textViewMoviesTitle"
        android:layout_alignStart="@+id/textViewMoviesTitle" />
    </LinearLayout>
</android.support.v7.widget.CardView>
